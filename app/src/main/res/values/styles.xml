<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewLight">
        <item name="android:fontFamily">@font/almarai_light</item>
        <item name="fontFamily">@font/almarai_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewRegular">
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="fontFamily">@font/almarai_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewRegularColor" parent="TextViewColor">
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="fontFamily">@font/almarai_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewBold">
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="fontFamily">@font/almarai_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewBoldColor" parent="TextViewColor">
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="fontFamily">@font/almarai_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageTintColor" parent="MainColorTint" />

    <style name="ButtonPrimary" parent="ButtonPrimaryStyle" />

    <style name="ButtonGoldStyle" parent="ButtonPrimaryStyle">
        <item name="backgroundTint">@color/golden_yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ButtonRegular" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="fontFamily">@font/almarai_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProgressPrimaryStyle" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:progressTint">@color/golden_yellow</item>
    </style>


</resources>