<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite"
    app:startDestination="@id/navigation_favorite">

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="de.itshasan.iptv_client.controller.homeScreen.ui.favorite.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_navigation_favorite_to_navigation_details"
            app:destination="@id/navigation_details"
            app:enterAnim="@anim/right_in_app"
            app:exitAnim="@anim/zoom_out_app"
            app:popEnterAnim="@anim/zoom_in_app"
            app:popExitAnim="@anim/right_out_app"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_details"
        android:name="de.itshasan.iptv_client.controller.contentInfo.ui.OverviewFragment"
        android:label="@string/gallery"
        tools:layout="@layout/gallery_fragment" />
</navigation>